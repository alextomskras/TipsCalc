<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".MainActivity" android:id="@+id/linearLayout">

    <TextView
            android:id="@+id/expensePerPersonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            style="@style/h1Bold"
            android:textColor="@color/colorAccent"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            style="@style/h2"
            android:textColor="@color/colorAccent"
            android:text="@string/perPersonStaticText"
            android:id="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/expensePerPersonTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:id="@+id/linearLayout2" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                style="@style/h4"
                android:text="@string/billStaticText"/>

        <EditText
                android:id="@+id/billEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:inputType="numberDecimal"
                android:maxLines="1"
                style="@style/h2Bold"
                android:text="0"/>

        <TextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                style="@style/h4"
                android:text="@string/tipStaticText"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/subtractTipButton"
                    style="@style/operationButton"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_remove_circle_outline_black_24dp"/>

            <TextView
                    android:id="@+id/tipTextView"
                    android:layout_margin="15dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    style="@style/h2Bold"
                    android:text="20%"/>

            <ImageButton
                    android:id="@+id/addTipButton"
                    style="@style/operationButton"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_add_circle_outline_black_24dp"/>

        </LinearLayout>

        <TextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                style="@style/h4"
                android:text="@string/numberOfPeopleStaticText"/>

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3" tools:layout_editor_absoluteY="350dp">

            <ImageButton
                    android:id="@+id/subtractPeopleButton"
                    style="@style/operationButton"
                    android:src="@drawable/ic_remove_circle_outline_black_24dp"
                    android:layout_height="0dp"
                    android:layout_width="0dp" app:layout_constraintEnd_toStartOf="@+id/numberOfPeopleTextView"
                    app:layout_constraintTop_toTopOf="@+id/addPeopleButton"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" app:layout_constraintBottom_toBottomOf="@+id/addPeopleButton"
                    android:layout_marginEnd="15dp" android:layout_marginRight="15dp"/>

            <TextView
                    android:id="@+id/numberOfPeopleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    style="@style/h2Bold"
                    android:text="4"
                    app:layout_constraintStart_toEndOf="@+id/subtractPeopleButton"
                    app:layout_constraintEnd_toStartOf="@+id/addPeopleButton"
                    app:layout_constraintTop_toTopOf="@+id/subtractPeopleButton"
                    app:layout_constraintBottom_toBottomOf="@+id/subtractPeopleButton" android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"/>

            <ImageButton
                    android:id="@+id/addPeopleButton"
                    style="@style/operationButton"
                    android:src="@drawable/ic_add_circle_outline_black_24dp"
                    android:layout_height="83dp"
                    android:layout_width="0dp" app:layout_constraintStart_toEndOf="@+id/numberOfPeopleTextView"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>